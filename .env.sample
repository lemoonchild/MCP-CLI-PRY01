# Anthropic LLM API
ANTHROPIC_API_KEY=tu_ant_api_key_aqui
ANTHROPIC_MODEL=modelo_aqui

# Servidor MCP Filesystem (v√≠a NPX)
MCP_FS_COMMAND=npx
MCP_FS_ARGS=-y @modelcontextprotocol/server-filesystem ./demo ./repos

# Servidor MCP Git (en Python con venv)
MCP_GIT_COMMAND=/absolute/path/a/tu/.venv/bin/python
MCP_GIT_ARGS=-m mcp_server_git

# Autor/committer de Git (pasados al proceso del servidor Git)
GIT_AUTHOR_NAME=Nombre del Autor
GIT_AUTHOR_EMAIL=nombre@example.com
GIT_COMMITTER_NAME=Nombre del Committer
GIT_COMMITTER_EMAIL=nombre@example.com